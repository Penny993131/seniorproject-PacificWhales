@model IEnumerable<Harmony.Models.ShowsViewModel>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-8 offset-2 shadow p-3 mb-5 bg-white rounded" style="margin-top: 40px;">
            <h3 id="form-title">Completed Shows</h3>
            <table>
                <tr>
                    <th>Venue</th>
                    <th>Date Booked</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th></th>
                </tr>
            </table>
            @foreach (var show in Model)
            {
                if (show.EndTime < DateTime.Now)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => show.VenueName)</td>
                        <td>@Html.DisplayFor(x => show.DateBooked)</td>
                        <td>@Html.DisplayFor(x => show.StartTime)</td>
                        <td>@Html.DisplayFor(x => show.EndTime)</td>
                        <td></td>
                    </tr>
                }
            }
        </div>
    </div>
}

@if (Model.Count() < 1)
{
    <div class="row">
        <div class="col-8 offset-2 shadow p-3 mb-5 bg-white rounded" style="margin-top: 40px;">
            <h2 style="text-align:center;">You haven't booked any shows</h2>
        </div>
    </div>
}
