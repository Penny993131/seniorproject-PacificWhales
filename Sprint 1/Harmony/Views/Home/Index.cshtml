@{
    ViewBag.Title = "Home Page";
}
<div class="container-fluid">

    <div>
        <h1 class="title text-center" style="color:floralwhite; font-family: Broadway">Harmony--Gig booking made easy!</h1>
        <h2 class="text-center" style="color:floralwhite">Connect with venue owners, book more gigs and grow your career(Salem, Oregon).</h2>
    </div>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <br />

    <div class="row">
        <div class="col-lg-4"></div>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>

            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Beatles.jpg" alt="First slide" style="max-width: 600px;">
                    <div class="carousel-caption">
                        <h3>Monmouth</h3>
                        <p>We love this beautiful college town!</p>
                    </div>

                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Cranberries.jpg" alt="Second slide" style="max-width: 600px;">
                    <div class="carousel-caption">
                        <h3>Chicago</h3>
                        <p>Thank you, Chicago!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/SavageGarden.png" alt="Third slide" style="max-width: 600px;">
                    <div class="carousel-caption">
                        <h3>Los Angeles</h3>
                        <p>We had such a great time in LALA Land!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Corrs.jpg" alt="Forth slide" style="max-width: 600px;">
                    <div class="carousel-caption">
                        <h3>New York</h3>
                        <p>We love the Big Apple!</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <p></p>
            <p></p>
            <p></p>
            <p></p>
            <p></p>
            <p></p>
            <br />
        </div>
    </div>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-deck">
                <div class="card" style="width: 20rem;">
                    <h5 class="card-header">Musician</h5>
                    <div class="card-body">
                        <h5 class="card-title">I'm Looking for...</h5>
                        <p class="card-text">
                            <ul>
                                <li>More Gigs</li>
                                <li>Industry Exposure</li>
                                <li>Professional EPK</li>
                                <li>Network with Other Musicians</li>
                            </ul>
                        </p>
                        <a href="~/Account/Login" class="btn btn-orange">Get started</a>
                    </div>
                </div>
                <div class="card" style="width: 20rem;">
                    <h5 class="card-header">Venue Owner</h5>
                    <div class="card-body">
                        <h5 class="card-title">I'm Looking for...</h5>
                        <p class="card-text">
                            <ul>
                                <li>Book Talented Musicians</li>
                                <li>Advertise Playing Opportunities</li>
                                <li>Promote My Venues</li>
                                <li>Share Good Musics</li>
                            </ul>
                        </p>
                        <a href="~/Account/Login" class="btn btn-orange">Get started</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts

{
    @Scripts.Render("~/bundles/jqueryval")
}
