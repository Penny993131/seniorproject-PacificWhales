@model IEnumerable<Harmony.Models.User>


<style>
    #form-title {
        margin-left: 20px;
        padding-top: 20px;
    }

    .form-group {
        margin-left: 20px;
        padding: 20px;
    }

    #radio-text {
        margin-top: 20px;
    }

    .form-check {
        margin: 20px 0 0 20px;
    }
</style>


<!-- Search form -->
<div class="row">
    <div class="col-6 offset-3 shadow p-3 mb-5 bg-white rounded" style="margin-top: 40px;">
        <h3 id="form-title">Search for other users</h3>
        <hr />

        @using (Html.BeginForm("Search", "Home", FormMethod.Get))
        {
            <div class="form-group">
                <div class="row">
                    <form class="form-inline md-form form-sm mt-2">
                        <input class="form-control form-control-sm mr-3 w-75" type="text" placeholder="Search"
                               aria-label="Search">
                    </form>
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
                <div class="row">
                    <p id="radio-text">Search for: </p>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="searchOption" id="musician-radio" value="option1" checked>
                        <label class="form-check-label" for="musician">Musicians</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="searchOption" id="venue-radio" value="option2">
                        <label class="form-check-label" for="venue">Venues</label>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@if(Model != null)
{
    <div class="row">
        <div class="col-10">
            <table>
                <tr>
                    <th>Results</th>
                    <th></th>
                </tr>
                <hr />
                @foreach(var user in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x  => user.FirstName) @Html.DisplayFor(x  => user.LastName)</td>
                        <td>@Html.DisplayFor(x => user.City), @Html.DisplayFor(x  => user.State)</td>
                        <td>@Html.DisplayFor(x => user.Genres)</td>
                        <td>@Html.DisplayFor(x  => user.Email)</td>
                    </tr>
                }
            </table>
        </div>
    </div>
}
