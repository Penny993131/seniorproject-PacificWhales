<style>
    #form-title {
        margin-left: 20px;
        padding-top: 20px;
    }

    .form-group {
        margin-left: 20px;
        padding: 20px;
    }

    #radio-text {
        margin-top: 20px;
    }

    .form-check {
        margin: 20px 0 0 20px;
    }
</style>


<!-- Search form -->
<div class="row">
    <div class="col-6 offset-3 shadow p-3 mb-5 bg-white rounded" style="margin-top: 40px;">
        <h3 id="form-title">Search for other users</h3>
        <hr />

        @using (Html.BeginForm("Search", "Home", FormMethod.Get))
        {
    <div class="form-group">
        <div class="row">
            <div class="col-4">
                <form>
                    <input class="form-control" type="text" placeholder="Search"
                           aria-label="Search" id="search" name="search">
                </form>
            </div>
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-secondary" id="filter_btn">Filter</button>
            </div>
            <div class="col-4" id="filters">
                <div class="row form-check">
                    <input class="form-check-input" type="checkbox" id="city-check" value="cityFilter" />
                    <label class="form-check-label"  for="city">City</label>
                    <br />
                    <input class="form-check-input" name="cityFilter" type="text" id="city" />
                    <br />
                </div>
                <div class="row form-check">
                    <input class="form-check-input" type="checkbox" id="state-check" value="stateFilter" />
                    <label class="form-check-label" for="state">State</label>
                    <br />
                    @Html.DropDownList("stateFilter", (SelectList)ViewBag.State, string.Empty)
                    <!--<input class="form-check-input" name="stateFilter" type="text" id="state" />-->
                </div>
            </div>
        </div>

        

        <div class="row" id="radioBtnList">
            <p id="radio-text">Search for: </p>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="searchOption" id="musician-radio" runat="server" value="option1" checked>
                <label class="form-check-label" for="musician">Musicians</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="searchOption" id="venue-radio" runat="server" value="option2">
                <label class="form-check-label" for="venue">Venues</label>
            </div>

            <div class="col-2" style="margin-left: 20px; margin-top: 20px;" >
            </div>
            
            </div>
    </div>
        }
        <script>
            $().ready(function () {
                $('#filters').hide();
            })

            $('#filter_btn').click(function () {
                $('#filters').show();
                $('#city').hide();
            })

            $('#city-check').click(function () {
                $('#city').show();
            })
        </script>
    </div>
</div>
