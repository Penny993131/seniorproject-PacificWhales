@model IEnumerable<Harmony.Models.Venue>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-10">
            <table>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th></th>
                </tr>
                @foreach (var venue in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => venue.VenueName)</td>
                        <td>@Html.DisplayFor(x => venue.AddressLine1) @Html.DisplayFor(x => venue.City), @Html.DisplayFor(x => venue.State)</td>
                        <td>@Html.ActionLink("Profile", "Details", "VenuesController", new { id = venue.UserID }, null)</td>
                    </tr>
                }
            </table>
        </div>
    </div>
}
@if (Model.Count() == 0)
{
    <h2 style="text-align:center;">No Matches</h2>
}

@Html.ActionLink("Search Again", "Search")

