@model IEnumerable<Harmony.Models.User_Show>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-8 offset-2 shadow p-3 mb-5 bg-white rounded" style="margin-top: 40px;">
            <h3 id="form-title">Completed Shows</h3>
            <table>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Show.Title)</th>
                    <th>>@Html.DisplayNameFor(model => model.Show.DateBooked)</th>
                    <th>>@Html.DisplayNameFor(model => model.Show.StartDateTime)</th>
                    <th>>@Html.DisplayNameFor(model => model.Show.EndDateTime)</th>
                    <th></th>
                </tr>

                @foreach (var show in Model)
                {
                    if (show.Show.EndDateTime < DateTime.Now)
                    {
                        <tr>
                            <td>@Html.DisplayFor(x => show.Show.Title)</td>
                            <td>@Html.DisplayFor(x => show.Show.DateBooked)</td>
                            <td>@Html.DisplayFor(x => show.Show.StartDateTime)</td>
                            <td>@Html.DisplayFor(x => show.Show.EndDateTime)</td>
                            <td>@Html.ActionLink("Details", "ShowDetails", new { id = show.Show.ID })</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
}

@if (Model.Count() < 1)
{
    <div class="row">
        <div class="col-8 offset-2 shadow p-3 mb-5 bg-white rounded" style="margin-top: 40px;">
            <h2 style="text-align:center;">You haven't completed any shows</h2>
        </div>
    </div>
}